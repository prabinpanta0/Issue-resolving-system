    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://fontawesome.com/icons/user?f=classic&s=solid&sz=lg&rt=flip-horizontal" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BetterWorld.styles.css" asp-append-version="true" />
    <link rel="x-icon" type="image/png" href="~/img/Betterworld.png">

</head>

<body>
    @using System.Security.Claims
    <div class="loader">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
    </div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light">

            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Img/Betterworld.png" alt="Better World" width="70px" height="70px">
                </a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Job" asp-action="Index">Jobs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Organization" asp-action="Index">Organizations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Application" asp-action="Index">Applications</a>
                        </li>
                    </ul>
                    <form class="d-flex" asp-controller="Search" asp-action="Index" method="get">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"
                            name="searchTerm">
                        <button class="search-button">
                            <span>
                                <svg viewBox="0 0 24 24" height="24" width="24" xmlns="http://www.w3.org/2000/svg">
                                    <path
                                        d="M9.145 18.29c-5.042 0-9.145-4.102-9.145-9.145s4.103-9.145 9.145-9.145 9.145 4.103 9.145 9.145-4.102 9.145-9.145 9.145zm0-15.167c-3.321 0-6.022 2.702-6.022 6.022s2.702 6.022 6.022 6.022 6.023-2.702 6.023-6.022-2.702-6.022-6.023-6.022zm9.263 12.443c-.817 1.176-1.852 2.188-3.046 2.981l5.452 5.453 3.014-3.013-5.42-5.421z">
                                    </path>
                                </svg>
                            </span>
                        </button>
                    </form>

                    <div class="d-flex">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="nav-item dropdown">
                                <a class="nav-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="tooltip-container">
                                        <svg class="bi" width="24" height="24">
                                            <use xlink:href="#user"></use>
                                        </svg>
                                        <span class="tooltip">@User.Identity.Name</span>
                                    </div>
                                </a>
                            </span>
                            <button id="SignoutButton" class="Btn" style="margin-top: 17px; margin-left: -5px;">
                                <div class="sign"><svg viewBox="0 0 512 512">
                                        <path
                                            d="M217.9 105.9L340.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L217.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1L32 320c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM352 416l64 0c17.7 0 32-14.3 32-32l0-256c0-17.7-14.3-32-32-32l-64 0c-17.7 0-32-14.3-32-32s14.3-32 32-32l64 0c53 0 96 43 96 96l0 256c0 53-43 96-96 96l-64 0c-17.7 0-32-14.3-32-32s14.3-32 32-32z">
                                        </path>
                                    </svg></div>
                                <div class="text">Logout</div>
                            </button>
                        }
                        else
                        {
                            <button class="Btn" onclick="window.location.href='/User/Login'">

                                <div class="sign"><svg viewBox="0 0 512 512">
                                        <path
                                            d="M217.9 105.9L340.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L217.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1L32 320c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM352 416l64 0c17.7 0 32-14.3 32-32l0-256c0-17.7-14.3-32-32-32l-64 0c-17.7 0-32-14.3-32-32s14.3-32 32-32l64 0c53 0 96 43 96 96l0 256c0 53-43 96-96 96l-64 0c-17.7 0-32-14.3-32-32s14.3-32 32-32z">
                                        </path>
                                    </svg></div>

                                <div class="text">Login</div>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="mx-auto">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <footer style="height: 30px;">
        <nav class="navbar navbar-expand-lg  navbar-light">
            <div class="container">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a href="~/Home/Index" class="nav-link px-2 text-body-secondary">Home</a>
                        </li>
                        <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="About"
                                class="nav-link px-2 text-body-secondary">About</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Service"
                                class="nav-link px-2 text-body-secondary">Services</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Privacy"
                                class="nav-link px-2 text-body-secondary">Privacy Policy</a></li>
                    </ul>
                    <ul class="nav col-md-4 d-flex justify-content-end">
                        <li class="ms-3"><button class="button" type="button">
                                <svg class="bi" width="24" height="24">
                                    <use xlink:href="#twitter"></use>
                                </svg>
                            </button>
                        </li>
                        <li class="ms-3"><button class="button" type="button">
                                <svg class="bi" width="24" height="24">
                                    <use xlink:href="#instagram"></use>
                                </svg></button></li>
                        <li class="ms-3"><button class="button"><svg class="bi" width="24" height="24">
                                    <use xlink:href="#facebook"></use>
                                </svg></button></li>
                    </ul>
                </div>
            </div>
        </nav>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Logout.js" asp-append-version="true"></script>
    <script src="~/js/Loader.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
